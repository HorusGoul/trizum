{
  "extends": "@trizum/tsconfig/base.json",
  "include": ["./src"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "types": ["node"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
  }
}
