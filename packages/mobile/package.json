{
  "name": "@trizum/mobile",
  "description": "",
  "keywords": [],
  "version": "1.0.4",
  "license": "MIT",
  "private": true,
  "author": "Horus Lugo <hola@horus.dev> (https://horus.dev)",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "exports": {
    "./package.json": "./package.json",
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "capacitor:copy:before": "./copy-client.sh",
    "cleanup": "rm -rf dist",
    "dev": "tsc --watch",
    "build": "./copy-client.sh && ./sync.sh",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts src",
    "lint:fix": "pnpm run lint --fix",
    "open:android": "cap open android",
    "open:ios": "cap open ios",
    "run:android": "cap run android",
    "run:ios": "cap run ios",
    "dev:android": "DEV_MODE=true pnpm run:android",
    "dev:ios": "DEV_MODE=true pnpm run:ios",
    "assets:generate": "./generate-icons.sh",
    "version:update": "capver set $(node -p \"require('./package.json').version\")"
  },
  "devDependencies": {
    "@capacitor/assets": "3.0.5",
    "@capacitor/cli": "7.4.4",
    "@capawesome/capver": "0.1.0",
    "@trizum/eslint-config": "workspace:*",
    "@trizum/prettier-config": "workspace:*",
    "@trizum/tsconfig": "workspace:*",
    "@types/node": "^24.10.1",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "sharp": "0.32.6",
    "svgexport": "0.4.2",
    "typescript": "5.9.2"
  },
  "prettier": "@trizum/prettier-config",
  "dependencies": {
    "@capacitor/android": "7.4.4",
    "@capacitor/app": "7.1.0",
    "@capacitor/ios": "7.4.4",
    "@capacitor/share": "7.0.3",
    "@capacitor/splash-screen": "7.0.3",
    "@capawesome/capacitor-app-update": "7.2.0",
    "@trizum/pwa": "workspace:*",
    "capacitor-plugin-safe-area": "4.0.3"
  }
}
