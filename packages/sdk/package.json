{
  "name": "@trizum/sdk",
  "description": "Trizum SDK - CRUD operations, real-time sync, and React Suspense for offline-first documents",
  "keywords": [
    "trizum",
    "sdk",
    "crdt",
    "offline-first",
    "suspense",
    "local-first"
  ],
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "author": "Horus Lugo <hola@horus.dev> (https://horus.dev)",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/worker/index.d.ts",
      "import": "./dist/worker/index.js",
      "default": "./dist/worker/index.js"
    },
    "./worker/repo-worker": {
      "types": "./dist/worker/repo-worker.d.ts",
      "import": "./dist/worker/repo-worker.js",
      "default": "./dist/worker/repo-worker.js"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "import": "./dist/testing.js",
      "default": "./dist/testing.js"
    }
  },
  "scripts": {
    "cleanup": "rm -rf dist",
    "dev": "tsc --watch",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src",
    "lint:fix": "pnpm run lint --fix",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@automerge/automerge": "3.2.1",
    "@automerge/automerge-repo": "2.5.1",
    "@automerge/automerge-repo-network-messagechannel": "2.5.1",
    "@automerge/automerge-repo-network-websocket": "2.5.1",
    "@automerge/automerge-repo-storage-indexeddb": "2.5.1",
    "dinero.js": "1.9.1",
    "suspense": "0.1.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@trizum/eslint-config": "workspace:*",
    "@trizum/prettier-config": "workspace:*",
    "@trizum/tsconfig": "workspace:*",
    "@types/dinero.js": "1.9.4",
    "@types/react": "npm:types-react@rc",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "ulidx": "2.4.1",
    "vitest": "3.2.4"
  },
  "prettier": "@trizum/prettier-config"
}
