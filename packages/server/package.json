{
  "name": "@trizum/server",
  "description": "",
  "keywords": [],
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "author": "Horus Lugo <hola@horus.dev> (https://horus.dev)",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "exports": {
    "./package.json": "./package.json",
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "cleanup": "rm -rf dist",
    "dev": "node --watch --experimental-transform-types src/main.ts",
    "start": "node --experimental-transform-types src/main.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts src",
    "lint:fix": "pnpm run lint --fix"
  },
  "devDependencies": {
    "@trizum/eslint-config": "workspace:*",
    "@trizum/prettier-config": "workspace:*",
    "@trizum/tsconfig": "workspace:*",
    "@types/node": "24.10.1",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  },
  "prettier": "@trizum/prettier-config"
}
