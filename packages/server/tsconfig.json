{
  "extends": "@trizum/tsconfig/base.json",
  "include": ["./src"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "#*": ["./*"]
    },
    "types": ["node"],
    "noEmit": true,
    "module": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true
  }
}
