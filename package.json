{
  "name": "root",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "author": "Horus Lugo <hola@horus.dev>",
  "scripts": {
    "build": "turbo run build",
    "lingui:extract": "turbo run lingui:extract",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "publish-packages": "changeset publish",
    "update-version": "changeset version && cd packages/mobile && pnpm version:update",
    "syncpack:fix": "syncpack fix-mismatches && syncpack format",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "generate:ts-template": "turbo gen workspace --copy @trizum/ts-template --type package",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "dependencies": {
    "@changesets/cli": "2.29.8",
    "@sentry/cli": "3.1.0",
    "@turbo/gen": "2.5.6",
    "syncpack": "12.3.3",
    "turbo": "2.5.6"
  },
  "engines": {
    "node": "^24"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "overrides": {
      "react": "0.0.0-experimental-d025ddd3-20240722",
      "react-dom": "0.0.0-experimental-d025ddd3-20240722",
      "@types/react": "npm:types-react@rc",
      "@types/react-dom": "npm:types-react-dom@rc"
    },
    "onlyBuiltDependencies": [
      "@sentry-internal/node-cpu-profiler",
      "@sentry/cli",
      "@swc/core",
      "cbor-extract",
      "core-js-pure",
      "esbuild",
      "puppeteer",
      "sharp",
      "unrs-resolver",
      "workerd"
    ]
  },
  "devDependencies": {
    "all-contributors-cli": "6.26.1"
  }
}
